<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/teal500</item>
        <item name="colorPrimaryDark">@color/teal800</item>
        <item name="colorAccent">@color/teal300</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppLaunch" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/teal500</item>
        <item name="colorPrimaryDark">@color/teal800</item>
        <item name="colorAccent">@color/teal300</item>
        <item name="titleTextColor">@color/colorWhite</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppNavigation" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/teal300</item>
        <item name="colorPrimaryDark">@color/teal300</item>
        <item name="colorAccent">@color/teal300</item>
        <item name="titleTextColor">@color/colorTextSecondary</item>
        <item name="android:textColorPrimary">@color/colorTextSecondary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
    </style>



    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
    </style>

    <style name="ButtonDialogWBW" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/tealA100</item>
        <item name="colorButtonNormal">@color/teal500</item>
    </style>

</resources>
