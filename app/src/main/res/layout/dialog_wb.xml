<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.devs.cnd.marvelousv.acts.ActMain"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/LGGrey900"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        >
    <LinearLayout
        android:background="@color/grey50"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="6"
            android:id="@+id/LinearMenu"
            android:orientation="horizontal"
            android:background="@color/teal500"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="55dp">
            <ImageView
                android:id="@+id/icCancel"
                android:layout_margin="2dp"
                android:src="@drawable/ic_clear_white_24dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView

                android:id="@+id/txTitle"
                android:text="Title"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:clickable="true"
                android:id="@+id/txSave"
                android:textColor="@color/colorWhite"
                android:gravity="right"
                android:layout_marginRight="15dp"
                android:textSize="17sp"
                android:text="Save"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutWBName"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/editTextWBName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Box Name"
                android:inputType="textPersonName" />

        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:id="@+id/linearFav"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:background="@drawable/boxshape_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgFav"
                android:tint="@color/colorBgGris"
                android:src="@drawable/ic_favorite_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Switch
                android:textSize="17sp"
                android:id="@+id/favoriteSwt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:text="Favorite"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/colorGris700" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearGbo"
            android:background="@drawable/boxshape_login"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgGlo"
                android:tint="@color/colorBgGris"
                android:src="@drawable/ic_language_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Switch
                android:textSize="17sp"
                android:id="@+id/gBoardSwt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:text="Global Board"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/colorGris700" />
        </LinearLayout>
    </LinearLayout>


    </LinearLayout>
