<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:background="@drawable/bg_rc_item"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
        android:layout_marginTop="5dp"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_weight="2"
                android:id="@+id/userPhoto"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher_round" />
            <LinearLayout
                android:layout_weight="8"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/boxUser"
                android:clickable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:textColor="@color/grey800"
                    android:id="@+id/userName"
                    android:text="User Name"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/userEmail"
                        android:layout_margin="2dp"
                        android:layout_gravity="center"
                        android:textColor="@color/grey600"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="user@email" />
                    <ImageView
                        android:id="@+id/icTypeProf"
                        android:layout_margin="2dp"
                        android:tint="@color/teal500"
                        android:layout_gravity="center"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_email_black_24dp" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/imgFRq"
                android:tint="@color/grey600"
                android:src="@drawable/ic_supervisor_account_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Switch
                android:layout_gravity="center"
                android:textSize="17sp"
                android:id="@+id/fRqSwt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:text="Friend Request Allowed"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/colorGris700" />
        </LinearLayout>
        <Button
            android:id="@+id/btEditUD"
            android:theme="@style/ButtonWhite"
            android:textColor="@color/grey600"
            android:text="Edit"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/linearEditor"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_gravity="center"
                android:id="@+id/userNameToUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="New Display Name"
                android:inputType="textPersonName" />
            <ImageView
                android:clickable="true"
                android:background="@drawable/bg_round"
                android:padding="5dp"
                android:layout_gravity="center"
                android:id="@+id/userPhotoToUpload"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:scaleType="fitCenter"
                android:src="@drawable/waves_face" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btEditUDCancel"
                    android:theme="@style/ButtonWhite"
                    android:textColor="@color/grey600"
                    android:text="Cancel"
                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/btEditUDSave"
                    android:theme="@style/ButtonDialogWBW"
                    android:textColor="@color/colorWhite"
                    android:text="Save"
                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            </LinearLayout>
        <Button
            android:visibility="gone"
            android:id="@+id/btResetPS"
            android:theme="@style/ButtonWhite"
            android:textColor="@color/grey600"
            android:text="Reset Password"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>
    </ScrollView>




</LinearLayout>